{
	"manifest_version": 2,
	"name": "Leap Presentation Chrome Extension",
	"description": "Leap motion control of web-based presentations",
	"version": "1.0",
	"permissions": [
		"http://lab.hakim.se/reveal-js/*",
		"http://slid.es/*",
		"https://docs.google.com/presentation/*"
	],
	"content_scripts": [{
		"matches": [
			"http://lab.hakim.se/reveal-js/*",
			"http://slid.es/*",
			"https://docs.google.com/presentation/*"
		],
		"js": [
			"jquery.1.10.2.min.js",
			"leap.0.8.1.js",
			"leapcontrol.js"
		]
	}]
}
